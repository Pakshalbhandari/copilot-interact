{
  "name": "copilot-interact",
  "displayName": "Copilot Interact",
  "description": "Extension to invoke Copilot with custom prompts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-interact.invokeWithPrompt",
        "title": "Copilot Interact: Invoke with Custom Prompt"
      }
    ],
    "configuration": {
      "title": "Copilot Interact",
      "properties": {
        "copilotInteract.promptsPath": {
          "type": "string",
          "default": "prompts",
          "description": "Path to prompt files directory"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}