{
  "name": "copilot-interact",
  "displayName": "Copilot Interact",
  "description": "Extension to invoke Copilot with custom prompts",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pakshalbhandari/copilot-interact.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilot-interact.invokeWithPrompt",
        "title": "Copilot Interact: Invoke with Custom Prompt"
      },

      {
        "command": "copilot-interact.invokeSequential",
        "title": "Copilot Interact: Execute Sequential Prompts"
      }
    ],
    "configuration": {
      "title": "Copilot Interact",
      "properties": {
        "copilotInteract.promptsPath": {
          "type": "string",
          "default": "prompts",
          "description": "Path to prompt files directory"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}